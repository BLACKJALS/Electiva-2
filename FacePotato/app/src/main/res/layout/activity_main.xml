<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alejandro.facepotato.MainActivity"
    android:id="@+id/i">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mr. Potato Head"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="20dp" />

    <ImageView

        android:id="@+id/Papa"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/body"
        android:visibility="visible"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Ojos"
        android:background="@drawable/eyes"
        android:layout_alignTop="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Cejas"
        android:background="@drawable/eyebrows"
        android:layout_alignTop="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Boca"
        android:background="@drawable/mouth"
        android:layout_alignTop="@+id/Papa"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/bigote"
        android:background="@drawable/mustache"
        android:layout_alignTop="@+id/Papa"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Nariz"
        android:background="@drawable/nose"
        android:layout_alignTop="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Brazos"
        android:background="@drawable/arms"
        android:layout_alignTop="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Pies"
        android:background="@drawable/shoes"
        android:layout_alignTop="@+id/Papa"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Sombrero"
        android:background="@drawable/hat"
        android:layout_alignTop="@+id/Papa"
        android:layout_centerHorizontal="true"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Gafas"
        android:background="@drawable/glasses"
        android:layout_alignTop="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/Orejas"
        android:background="@drawable/ears"
        android:layout_alignTop="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa"
        android:visibility="invisible" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/hat"
        android:checked="false"
        android:enabled="true"
        android:onClick="seleccionarPartes"
        android:text="Hat"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EyeBrowns"
        android:id="@+id/eyeBrowns"
        android:checked="false"
        android:layout_below="@+id/hat"
        android:layout_alignLeft="@+id/hat"
        android:layout_alignStart="@+id/hat"
        android:onClick="seleccionarPartes"
        android:nestedScrollingEnabled="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nose"
        android:id="@+id/nose"
        android:checked="false"
        android:layout_below="@+id/eyeBrowns"
        android:layout_alignLeft="@+id/eyeBrowns"
        android:layout_alignStart="@+id/eyeBrowns"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mustache"
        android:id="@+id/mustache"
        android:checked="false"
        android:layout_below="@+id/nose"
        android:layout_alignLeft="@+id/nose"
        android:layout_alignStart="@+id/nose"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arms"
        android:id="@+id/arms"
        android:checked="false"
        android:layout_below="@+id/mustache"
        android:layout_alignLeft="@+id/mustache"
        android:layout_alignStart="@+id/mustache"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eyes"
        android:id="@+id/eyes"
        android:checked="false"
        android:layout_above="@+id/eyeBrowns"
        android:layout_alignLeft="@+id/glasses"
        android:layout_alignStart="@+id/glasses"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Glasses"
        android:id="@+id/glasses"
        android:checked="false"
        android:layout_below="@+id/eyes"
        android:layout_alignRight="@+id/Papa"
        android:layout_alignEnd="@+id/Papa"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mouth"
        android:id="@+id/mouth"
        android:checked="false"
        android:layout_below="@+id/glasses"
        android:layout_alignLeft="@+id/glasses"
        android:layout_alignStart="@+id/glasses"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ears"
        android:id="@+id/ears"
        android:checked="false"
        android:layout_below="@+id/mouth"
        android:layout_alignLeft="@+id/mouth"
        android:layout_alignStart="@+id/mouth"
        android:onClick="seleccionarPartes"/>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shoes"
        android:id="@+id/Zapatos"
        android:checked="false"
        android:layout_below="@+id/ears"
        android:layout_alignRight="@+id/mouth"
        android:layout_alignEnd="@+id/mouth"
        android:onClick="seleccionarPartes"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click para agregar o remover partes."
        android:id="@+id/textView2"
        android:layout_below="@+id/Papa"
        android:layout_alignLeft="@+id/Papa"
        android:layout_alignStart="@+id/Papa" />

</RelativeLayout>
